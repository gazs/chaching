  {
    "name": "Getting Started Example",
    "version": "1.0",
    "description": "Build an Extension!",
    "manifest_version": 2,
    "web_accessible_resources": [
      "script.js",
      "sound.mp3"
    ],
    "permissions": [
    "background",
    "activeTab"
    ],
    "content_scripts": [
      {
        "matches": [
          "http://*/*",
          "https://*/*"
        ],
        "js": ["contentScript.js"],
        "run_at": "document_start"
      }
    ]
  }
